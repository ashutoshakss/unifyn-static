{
  "name": "unifyn-trade",
  "version": "1.0.0",
  "description": "India's first unified, broker-agnostic trading hub",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "build:static": "next build && rm -rf dist && cp -r .next/server/app dist && mkdir -p dist/_next && cp -r .next/static dist/_next/ && cp -r public/* dist/",
    "start": "next start -p 3000",
    "serve:dist": "npx http-server ./dist -p 8080 -c-1",
    "preview": "wrangler pages dev .",
    "deploy": "wrangler pages deploy dist --project-name=unifyn-trade",
    "validate": "node scripts/validate.js"
  },
  "keywords": [
    "unified finance superapp",
    "broker agnostic trading app",
    "unified finance",
    "broker agnostic platform",
    "multi broker trading",
    "trading platform India",
    "Angel One Zerodha integration",
    "unified trading interface",
    "fintech superapp",
    "broker independent trading",
    "consolidated trading platform",
    "portfolio management India",
    "trading analytics platform",
    "multi-broker app"
  ],
  "author": "Unifyn",
  "license": "UNLICENSED",
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "24.9.1",
    "@types/react": "19.2.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "5.9.3",
    "wrangler": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults and fully supports es6-module",
    "maintained node versions"
  ]
}
